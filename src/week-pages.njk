---
layout: default
pagination: 
    data: weeks 
    size: 1 
    alias: week 
permalink: "week/{{ week.weekNumber | slugify }}/" 
---

<div class="px-24 md:px-12 lg:px-16 xl:px-32 2xl:px-64">

    <ol class="items-center pt-12 sm:flex">

        {# {{ week |  dump | safe }} #}

 {% if week.weekNumber > 2 %}
 {% set prevWeek = weeks[week.weekNumber - 2] %}
 <li class="relative mb-6 sm:mb-0 min-w-max">
                <div class="flex-row items-center">
                    <a href="{{ ['/week/',prevWeek.weekNumber,'/'] | join | url }}">
                        <div class="z-10 flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full ring-0 {{ "ring-green-400 dark:ring-green-300" if week.weekNumber == prevWeek.weekNumber else "ring-white dark:ring-slate-700" }} dark:bg-blue-900 ring-8 shrink-0">
<svg class="w-2.5 h-2.5 text-green-800 dark:text-slate-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
    <path d="M20 11a1 1 0 0 1-1 1H3.414l2.293 2.293a1 1 0 0 1-1.414 1.414l-4-4a1 1 0 0 1 0-1.414l4-4a1 1 0 0 1 1.414 1.414L3.414 9H19a1 1 0 0 1 1 1Z"/>
</svg>


                        </div>
                    </a>
                    <div class="hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700"></div>
                </div>
                <div class="mt-3 sm:pe-8">
                    <a href="{{ ['/week/',prevWeek.weekNumber,'/'] | join | url }}">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Prev </h3>
                        <a>
                            <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"> &nbsp;</time>
                            <p class="text-base font-normal text-gray-500 dark:text-gray-400"> &nbsp;
                            </p>
                        </div>
                    </li>
 

 {% endif %}

        {% if week.weekNumber > 1 %}

            {% set prevWeek = weeks[week.weekNumber - 2] %}

            <li class="relative mb-6 sm:mb-0 min-w-max">
                <div class="flex-row items-center">
                    <a href="{{ ['/week/',prevWeek.weekNumber,'/'] | join | url }}">
                        <div class="z-10 flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full ring-0 {{ "ring-green-400 dark:ring-green-300" if week.weekNumber == prevWeek.weekNumber else "ring-white dark:ring-slate-700" }} dark:bg-blue-900 ring-8 shrink-0">
                            <svg class="w-2.5 h-2.5 text-green-800 dark:text-slate-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                            </svg>
                        </div>
                    </a>
                    <div class="hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700"></div>
                </div>
                <div class="mt-3 sm:pe-8">
                    <a href="{{ ['/week/',prevWeek.weekNumber,'/'] | join | url }}">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Week {{ prevWeek.weekNumber}}</h3>
                        <a>
                            <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{{ prevWeek.endDate | datefmtstr }}</time>
                            <p class="text-base font-normal text-gray-500 dark:text-gray-400">{{ prevWeek.scripture if prevWeek.scripture else "TBC" }}
                            </p>
                        </div>
                    </li>

                {% endif %}

                {# {{ prevWeek |  dump | safe }} #}
                <li class="relative mb-6 sm:mb-0 min-w-max">
                    <div class="flex-row items-center">
                        <a href="{{ ['/week/',week.weekNumber,'/'] | join | url }}">
                            <div class="z-10 flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full ring-0 {{ "ring-green-400 dark:ring-green-300" if week.weekNumber == week.weekNumber else "ring-white dark:ring-slate-700" }} dark:bg-blue-900 ring-8 shrink-0">
                                <svg class="w-2.5 h-2.5 text-green-800 dark:text-slate-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                                </svg>
                            </div>
                        </a>
                        <div class="hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700"></div>
                    </div>
                    <div class="mt-3 sm:pe-8">
                        <a href="{{ ['/week/',week.weekNumber,'/'] | join | url }}">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Week {{ week.weekNumber}}</h3>
                            <a>
                                <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{{ week.endDate | datefmtstr }}</time>
                                <p class="text-base font-normal text-gray-500 dark:text-gray-400">{{ week.scripture if week.scripture else "TBC" }}
                                </p>
                            </div>
                        </li>

                        {{ weeks.length | dump | safe}}

                        {% if week.weekNumber < weeks.length %}

                            {% set nextWeek = weeks[week.weekNumber] %}

                            <li class="relative mb-6 sm:mb-0 min-w-max">
                                <div class="flex-row items-center">
                                    <a href="{{ ['/week/',nextWeek.weekNumber,'/'] | join | url }}">
                                        <div class="z-10 flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full ring-0 {{ "ring-green-400 dark:ring-green-300" if week.weekNumber == nextWeek.weekNumber else "ring-white dark:ring-slate-700" }} dark:bg-blue-900 ring-8 shrink-0">
                                            <svg class="w-2.5 h-2.5 text-green-800 dark:text-slate-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                                            </svg>
                                        </div>
                                    </a>
                                    <div class="hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700"></div>
                                </div>
                                <div class="mt-3 sm:pe-8">
                                    <a href="{{ ['/week/',nextWeek.weekNumber,'/'] | join | url }}">
                                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Week {{ nextWeek.weekNumber}}</h3>
                                        <a>
                                            <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{{ nextWeek.endDate | datefmtstr }}</time>
                                            <p class="text-base font-normal text-gray-500 dark:text-gray-400">{{ nextWeek.scripture if nextWeek.scripture else "TBC" }}
                                            </p>
                                        </div>
                                    </li>

                                {% endif %}

                                 {% if week.weekNumber < (weeks.length -1) %}
                                 <li class="relative mb-6 sm:mb-0 min-w-max">
                <div class="flex-row items-center">
                    <a href="{{ ['/week/',nextWeek.weekNumber,'/'] | join | url }}">
                        <div class="z-10 flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full ring-0 {{ "ring-green-400 dark:ring-green-300" if week.weekNumber == nextWeek.weekNumber else "ring-white dark:ring-slate-700" }} dark:bg-blue-900 ring-8 shrink-0">
<svg class="w-2.5 h-2.5 text-green-800 dark:text-slate-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
    <path d="M0 9a1 1 0 0 1 1-1h14.586l-2.293-2.293a1 1 0 0 1 1.414-1.414l4 4a1 1 0 0 1 0 1.414l-4 4a1 1 0 0 1-1.414-1.414L15.586 11H1a1 1 0 0 1-1-1Z"/>
</svg>



                        </div>
                    </a>
                    <div class="hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700"></div>
                </div>
                <div class="mt-3 sm:pe-8">
                    <a href="{{ ['/week/',nextWeek.weekNumber,'/'] | join | url }}">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Next </h3>
                        <a>
                            <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"> &nbsp;</time>
                            <p class="text-base font-normal text-gray-500 dark:text-gray-400"> &nbsp;
                            </p>
                        </div>
                    </li>
                                 {% endif %}

                                {# {% for listweek in weeks %}

                                    <li class="relative mb-6 sm:mb-0 min-w-max">
                                        <div class="flex-row items-center">
                                            <a href="{{ ['/week/',listweek.weekNumber,'/'] | join | url }}">
                                                <div class="z-10 flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full ring-0 {{ "ring-green-400 dark:ring-green-300" if week.weekNumber == listweek.weekNumber else "ring-white dark:ring-slate-700" }} dark:bg-blue-900 ring-8 shrink-0">
                                                    <svg class="w-2.5 h-2.5 text-green-800 dark:text-slate-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                                        <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                                                    </svg>
                                                </div>
                                            </a>
                                            <div class="hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700"></div>
                                        </div>
                                        <div class="mt-3 sm:pe-8">
                                            <a href="{{ ['/week/',listweek.weekNumber,'/'] | join | url }}">
                                                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Week {{ listweek.weekNumber}}</h3>
                                                <a>
                                                    <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{{ listweek.endDate | datefmtstr }}</time>
                                                    <p class="text-base font-normal text-gray-500 dark:text-gray-400">{{ listweek.scripture if listweek.scripture else "TBC" }}
                                                    </p>
                                                </div>
                                            </li>

                                        {% endfor %} #}

                                    </ol>

                                    <ol class="relative mt-12 border-gray-200 border-s dark:border-gray-700 min-w-max">

                                        {%  for reading in readings%}

                                            {% if reading.weekOfYear == week.weekOfYear %}

                                                <li x-data="{ isCurrentDate: isDateToday('{{ reading.date }}') }" class="mb-10 ms-4" >
                                                    <div :class="{ 'bg-blue-400': isCurrentDate, 'bg-gray-200 dark:bg-gray-600': !isCurrentDate }" class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 "></div>
                                                    <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">Day {{ reading.day }} - {{ reading.date | datefmtstr }}</time>
                                                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                                                        <a href="{{ ['/readings/',reading.day,'/'] | join | url }}" class="relative block">{{ reading.passage }}</a>
                                                    </h3>
                                                    <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">{{ reading.theme }}</p>
                                                </li>

                                            {% endif %}
                                        {% endfor %}

                                    </ol>

                                </div>

                                <script>
                                    document.addEventListener('alpine:init', () => {

                                        Alpine.data('isDateToday', (date) => {

                                            let d1 = new Date(date)
                                            let d2 = new Date()

                                            return (d1.getFullYear() == d2.getFullYear() && d1.getMonth() == d2.getMonth() && d1.getDate() == d2.getDate())

                                        });

                                        Alpine.data('now', () => {
                                            return new Date()
                                        });
                                    });
                                </script>