<header class="dark:bg-slate-800 bg-gray-300 ">
<div :class="{'dark': darkMode}" class="min-h-12 bg-gray-300 dark:bg-slate-800 dark:text-gray-100">
            <div class="flex items-center justify-center space-x-2">
              <span class="text-sm text-gray-800 dark:text-gray-500">Light</span>
              <label for="toggle" class="flex items-center h-5 p-1 duration-300 ease-in-out bg-gray-300 rounded-full cursor-pointer w-9 dark:bg-slate-800">
                <input id="toggle" type="checkbox" class="hidden" :checked="darkMode" @change="darkMode = !darkMode">
                <div class="w-4 h-4 duration-300 ease-in-out transform bg-white rounded-full shadow-md toggle-dot" :class="{'dark:translate-x-3': darkMode}"></div>
              </label>
              <span class="text-sm text-gray-400 dark:text-white">Darker</span>
            </div>
          </div>
</header> 