<!DOCTYPE html>
<html class="dark" lang="{{- site.language -}}">
  {%- include 'components/head.njk' -%}
  <body x-data="{'darkMode': false}" x-init="
         darkMode = JSON.parse(localStorage.getItem('darkMode'));
         $watch('darkMode', value => localStorage.setItem('darkMode', JSON.stringify(value)))" class="flex flex-col min-h-screen  dark:bg-slate-800 dark:text-slate-50">
    <a class="skip-link border-0 h-auto m-0 p-0 overflow-hidden absolute w-0 whitespace-no-wrap top-0 left-0 bg-purple-900 text-white focus:inline-block focus:p-4 focus:w-auto " href="#main-content">Skip to main content</a>
    
     <div :class="{'dark': darkMode}">
    
    {%- include 'components/darkModeHeader.njk' -%}
    <div class="container mx-auto px-4 pb-8 pt-8 md:pt-20 md:pb-20 max-w-full bg-white">
      <main id="main-content" tabindex="-1">
        {{- content | safe -}}
      </main>
    </div>

    {%- include 'components/footer.njk' -%}
</div>
    {# <script type="module" src="/main.alpine.js"></script> #}
  </body>
</html>