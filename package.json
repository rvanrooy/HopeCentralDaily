{
  "name": "HopeCentralDaily",
  "version": "1.0.0",
  "description": "Daily Reading Plan",
  "scripts": {
    "start": "run-p start:*",
    "start:eleventy": "eleventy --serve",
    "start:postcss": "postcss src/styles/*.css --dir _site --watch",
    "build": "run-s clean build:eleventy build:postcss",
    "build:eleventy": "cross-env ELEVENTY_PRODUCTION=true eleventy",
    "build:postcss": "cross-env NODE_ENV=production postcss src/styles/*.css --dir _site",
    "clean": "rimraf _site"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rvanrooy/HopeCentralDaily.git"
  },
  "keywords": [
    "eleventy",
    "11ty",
    "tailwind"
  ],
  "author": "Reinhardt van Rooyen",
  "license": "Unlicense",
  "homepage": "https://github.com/rvanrooy/HopeCentralDaily#readme",
  "bugs": {
    "url": "https://github.com/rvanrooy/HopeCentralDaily/issues"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "alpinejs": "^3.13.4",
    "autoprefixer": "^10.4.17",
    "cross-env": "^7.0.3",
    "cssnano": "^6.0.3",
    "date-fns": "^2.29.3",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.34",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.0.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "@11ty/eleventy-fetch": "^4.0.0",
    "@11ty/eleventy-img": "^4.0.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@11ty/eleventy-plugin-webc": "^0.11.2",
    "@11ty/is-land": "^4.0.0",
    "@jamshop/eleventy-filter-dump": "^1.0.4",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "alpinejs": "^3.13.4",
    "bible-english": "^1.0.3",
    "bible-passage-reference-parser": "^2.0.1",
    "csv-parse": "^5.5.3",
    "flowbite": "^2.3.0",
    "luxon": "^3.4.4",
    "node-fetch": "^2.7.0",
    "simple-json-db": "^2.0.0"
  }
}
